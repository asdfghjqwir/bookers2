<div class="container">
  <div class="row">
    <div class="col-md-3">
      <%= render 'layouts/list', user: @user, book: Book.new %>
    </div>

    <div class="col-md-8 offset-md-1">
      <h2>Books</h2>
      <table class="table table-hover table-inverse">
        <thead>
          <tr>
            <th></th>
            <th>Title</th>
            <th>Opinion</th>
            <th colspan="3"></th>
          </tr>
        </thead>
        <tbody>
          <% @books.each do |book| %>
            <tr>
              <td>
                <%= link_to(book.user) do %>
                  <%= image_tag book.user.get_profile_image(50, 50) %>
                <% end %>
              </td>
              <td><%= link_to book.title, book, class: "book_#{book.id}" %></td>
              <td><%= book.body %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>

